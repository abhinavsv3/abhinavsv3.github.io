---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/writing', label: 'Writing' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-bg-light/80 dark:bg-bg-dark/80 backdrop-blur-md border-b border-border-light dark:border-border-dark">
  <nav class="max-w-5xl mx-auto px-6 py-5">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold tracking-tight text-ink dark:text-ink-dark hover:text-accent dark:hover:text-accent-dark transition-colors">
        Scaling Thoughts
      </a>

      <div class="flex items-center gap-8">
        <ul class="flex items-center gap-8">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'text-sm font-medium transition-colors',
                  currentPath === item.href
                    ? 'text-accent dark:text-accent-dark'
                    : 'text-ink-muted dark:text-ink-dark-muted hover:text-[#0a0a0a] dark:hover:text-[#fafafa]',
                ]}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>
